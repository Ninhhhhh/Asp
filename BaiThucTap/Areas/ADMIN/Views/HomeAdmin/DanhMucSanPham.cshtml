@model IEnumerable<BaiThucTap.Models.SanPham>

@{
    ViewData["Title"] = "DanhMucSanPham";
    Layout = "~/Areas/ADMIN/Views/Shared/LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>Danh Sách Sản Phẩm</h1>
<p class="bg-warning text-white"> @TempData["Message"]
<p />
<p>
    <button type="button" class="btn btn-gradient-success btn-fw"><a style="text-decoration: none;" asp-action="ThemSanPham">Create New</a></button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên Sản Phẩm
            </th>
            <th>
                Giá
            </th>
            <th>
                Ảnh Đại Diện
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="text-primary" >
                @Html.DisplayFor(modelItem => item.TenSp)
            </td >
            <td class="text-primary">
                @Html.DisplayFor(modelItem => item.Gia)
            </td>
            <td class="text-primary">
                    <img style="width:70px; height:70px;" src="~/Anh/images/@Html.DisplayFor(modelItem => item.AnhDaiDien)">
            </td>
           
            <td>
                    <button type="button" class="btn btn-gradient-primary btn-rounded btn-fw"> <a style="text-decoration: none;" asp-controller="HomeAdmin" asp-action="SuaSanPham" asp-route-maSanPham="@item.Id">Edit</a> </button>

                    <button type="button" class="btn btn-gradient-danger btn-rounded btn-fw"> <a style="text-decoration: none;" asp-action="XoaSanPham" asp-route-maSanPham="@item.Id">Delete</a></button>
            </td>
        </tr>
}
    </tbody>
</table>
